@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label mt-4"></label>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" id="floatingInput" placeholder=" " />
                        <label for="floatingInput">What is your email address?</label>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label mt-4"></label>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" id="floatingInput" placeholder=" " />
                        <label for="floatingInput">Type in your password</label>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox"/>@Html.DisplayNameFor(m => m.Input.RememberMe)
                    </div>
                </div>
                <div class="form-label mt-4">
                    <button type="submit" class="btn btn-secondary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="card-link">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="card-link">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
