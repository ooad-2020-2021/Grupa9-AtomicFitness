@model IEnumerable<AtomicFitness.Models.FitnesProfil>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<table class="table table-hover" style="text-align: center">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Spol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Starost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilaza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oprema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciljevi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Misici)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Spol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Starost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilaza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oprema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciljevi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Misici)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FitnesProfilID" class="btn btn-outline-warning">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.FitnesProfilID" class="btn btn-outline-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.FitnesProfilID" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
