@model IEnumerable<AtomicFitness.Models.Korisnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @using (Html.BeginForm("Index", "Korisnik", FormMethod.Get))
    {
        <b style="margin-right: 10px">Search By:</b>
        @Html.RadioButton("SearchBy", "Ime", true) <span style="margin-right: 10px">First Name</span>
        @Html.RadioButton("SearchBy", "Prezime") <span style="margin-right: 10px">Last Name</span>
        @Html.RadioButton("SearchBy", "Email") <span style="margin-right: 10px">Email</span>
        <br />
        @Html.TextBox("Search") <input type="submit" value="Search" style="margin-bottom: 10px" />
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">No rows match search criteria</td>
    </tr>

}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
