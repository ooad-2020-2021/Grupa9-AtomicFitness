@model IEnumerable<AtomicFitness.Models.Korisnik>

@{
    ViewData["Title"] = "User";
}

<h1>User</h1>

<div style="margin-bottom: 10px">
    @using (Html.BeginForm("Index", "Korisnik", FormMethod.Get))
    {
        <div style="margin-bottom: 10px">
            <b style="margin-right: 10px">Search By:</b>
            @Html.RadioButton("SearchBy", "Ime", new { @class = "form-check-input" }) <span style="margin-right: 10px">First Name</span>
            @Html.RadioButton("SearchBy", "Prezime", new { @class = "form-check-input" }) <span style="margin-right: 10px">Last Name</span>
            @Html.RadioButton("SearchBy", "Email", new { @class = "form-check-input"}) <span style="margin-right: 10px">Email</span>
        </div>
        @Html.TextBox("Search", "", new { @class = "form-control me-sm-2", @style = "display: inline-block; width: 30%"}) 
        <input type="submit" value="Search" class="btn btn-outline-light my-2 my-sm-0"/>
    }
</div>

<table class="table table-hover" style="text-align: center">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">No rows match search criteria</td>
    </tr>

}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
