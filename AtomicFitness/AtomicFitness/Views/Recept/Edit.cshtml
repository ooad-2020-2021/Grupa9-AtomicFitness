@model AtomicFitness.Models.Recept

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recept</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReceptID" />
            <div class="form-group">
                <label asp-for="Naziv" class="form-label mt-4"></label>
                <div class="form-floating">
                    <input asp-for="Naziv" class="form-control" id="floatingInput" placeholder=" " />
                    <label for="floatingInput">What is the name of your recipe?</label>
                </div>
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sastojci" class="form-label mt-4"></label>
                <div class="form-floating">
                    <input asp-for="Sastojci" class="form-control" id="floatingInput" placeholder=" " />
                    <label for="floatingInput">What does your recipe include?</label>
                </div>
                <span asp-validation-for="Sastojci" class="text-danger"></span>
                <small class="form-text text-muted">For more than one ingredient use comma as a delimiter</small>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="form-label mt-4"></label>
                <textarea asp-for="Opis" class="form-control"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="form-label mt-4"></label>
                <div class="form-floating">
                    <input asp-for="Link" class="form-control" id="floatingInput" placeholder=" " />
                    <label for="floatingInput">Provide a link to picture.</label>
                </div>
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-label mt-4">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="card-link">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
