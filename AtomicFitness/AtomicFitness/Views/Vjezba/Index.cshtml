@model IEnumerable<AtomicFitness.Models.Vjezba>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<div style="margin-bottom: 10px">
    @using (Html.BeginForm("Index", "Vjezba", FormMethod.Get))
    {
        <div style="margin-bottom: 10px">
            <b style="margin-right: 10px">Search By:</b>
            @Html.RadioButton("SearchBy", "Naziv", true) <span style="margin-right: 10px">Name</span>
            @Html.RadioButton("SearchBy", "Oprema") <span style="margin-right: 10px">Equipment</span>
            @Html.RadioButton("SearchBy", "Level") <span style="margin-right: 10px">Fitness Level</span>
            @Html.RadioButton("SearchBy", "Misici") <span style="margin-right: 10px">Muscles Worked</span>
        </div>
        @Html.TextBox("Search") <input type="submit" value="Search"/>
    }
</div>

<table class="table table-hover" style="text-align: center">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oprema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Misici)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojPonavljanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojSerija)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7">No rows match search criteria</td>
            </tr>

        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naziv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oprema)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Misici)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrojPonavljanja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrojSerija)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VjezbaID" class="btn btn-outline-primary">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.VjezbaID" class="btn btn-outline-primary">Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.VjezbaID" class="btn btn-outline-primary">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
